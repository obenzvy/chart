<h1>Listing charts</h1>


<script src="/assets/highcharts.js" type="text/javascript"></script>

<script type="text/javascript" charset="utf-8">
  var chart1; // globally available
  $(document).ready(function() {
        chart1 = new Highcharts.Chart({
           chart: {
              renderTo: 'container',
           },
           title: {
              text: 'Comprehension'
           },
           xAxis: {
              type: 'datetime'
           },
           yAxis: {
              title: {
                 text: 'Fruit eaten'
              }
           },
           series: [{
               pointInterval: <%= 1.day * 1000 %>,
               pointStart: <%= 3.weeks.ago.at_midnight.to_i * 1000 %>,
               data: [1, 2, 5, 7, 3]
             }]
        });
     });
</script>
<div id="container" style="width: 100%; height: 400px"></div>

<script src="/assets/data.js" type="text/javascript"></script>

<table>
  <tr>
    <th>Video time</th>
    <th>Comprehension</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @charts.each do |chart| %>
  <tr>
    <td><%= chart.video_time.strftime("%l:%M") %></td>
    <td><%= chart.comprehension %></td>
    <td><%= link_to 'Show', chart %></td>
    <td><%= link_to 'Edit', edit_chart_path(chart) %></td>
    <td><%= link_to 'Destroy', chart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

